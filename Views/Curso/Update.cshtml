@model Curso

@{
    ViewData["Title"] = "Modificar un Curso";
    Layout = "Simple";
}

<h1>@ViewData["Title"]</h1>
<div class="container">
<div asp-validation-summary="All"></div>
<form class="form" method="POST">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input class="form-control" asp-for="Id" readonly />
    </div>
    <div class="form-group">
        <label>Nombre:</label>
        <input class="form-control" asp-for="Nombre" type="text" required />
    </div>
    <div class="form-group">
        <label>Dirección:</label>
        <input class="form-control" asp-for="Dirección" />
    </div>
    <div class="form-group">
        <label>Jornada:</label>
        @Html.DropDownList("Jornada", Html.GetEnumSelectList<TiposJornada>(),
        "Seleccione una Jornada", 
        new { @class = "form-control" } 
        )
    </div>
    <input class="btn btn-warning" type="submit" value="Modificar" />
    <a class="btn btn-primary" asp-action="Index"  class="btn btn-primary">Volver al index</a>

</form>
</div>

<p><i>@ViewBag.Fecha</i></p>