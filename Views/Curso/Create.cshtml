@model Curso

@{
    ViewData["Title"]="Informacion Curso";
    Layout="Simple";
}
<h1>     @ViewData["Title"] </h1>
<div class="container">
<div asp-validation-summary="All"></div>
<form class="form" method="POST">
    <div class="form-group">
        <label asp-for="Nombre"></label>    
        <input class="form-control" asp-for="Nombre"/>
    </div>
        <div class="form-group">
        <label asp-for="Dirección"></label>
        <input class="form-control" asp-for="Dirección"/>
    </div>
        <div class="form-group">
        <label asp-for="Jornada"></label>
        @Html.DropDownList(
            "Jornada", Html.GetEnumSelectList<TiposJornada>(),
            "Seleccione una jornada",
            new {@class = "form-control"}
        )
    </div>
    <input class="btn btn-success" type="submit"/>
    <a class="btn btn-success" asp-action="Index"  class="btn btn-primary">Volver al index</a>

</form>
</div>

<p><i>@ViewBag.Fecha</i></p>